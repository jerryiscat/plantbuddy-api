# Copy this file to backend/.env and fill in secrets. Do NOT commit the real .env file.
# This repository already ignores .env files via .gitignore.

# Django settings
DJANGO_SECRET_KEY=
DEBUG=True

# Database (example values for local development)
DB_NAME=plantbuddy_db
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# External APIs
# Plant.id API key - set this to enable image-based plant identification
PLANT_ID_API_KEY=

# Perenual API key - optional (used for plant metadata search)
PERENUAL_API_KEY=

# Other optional settings
# e.g., email SMTP credentials if you want password reset emails to work in development
EMAIL_HOST=
EMAIL_PORT=
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True
